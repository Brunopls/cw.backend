{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {

		"message": {
			"$id": "#message",
			"title": "Message",
			"description": "Message data validation.",
			"type": "object",
			"properties": {
				"text": {
					"description": "Text",
					"type": "string"
				},
				"inquirerEmail": {
					"description": "Inquirer Email",
					"type": "string",
					"format": "email"
				},
				"user": {
					"description": "Agent ID",
					"type": "integer",
					"minLength": 8
				},
				"property": {
					"description": "Property ID",
					"type": "integer",
					"minLength": 8
				}
			},

			"required": ["text", "inquirerEmail", "user", "property"]
		}
	}
}