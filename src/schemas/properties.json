{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "property": {
      "$id": "#property",
      "title": "Property",
      "description": "Property data validation.",
      "type": "object",
      "properties": {
        "title": {
          "description": "Property Title",
          "type": "string"
        },
        "description": {
          "description": "Property Description",
          "type": "string"
        },
        "location": {
          "description": "Property Location",
          "type": "string"
        },
        "propertyCategory": {
          "description": "Property Categry",
          "type": "integer"
        }
      },

      "required": ["title", "description", "location", "propertyCategory"]
    }
  }
}
