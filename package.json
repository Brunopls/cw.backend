{
  "name": "cw.backend",
  "version": "1.0.0",
  "description": "Coursework repo for 340CM back-end.",
  "main": "index.js",
  "scripts": {
    "env:dev": "./node_modules/.bin/cross-env DB_DATABASE=wesellhousesDB",
    "start": "./node_modules/.bin/cross-env DB_DATABASE=wesellhousesDB && nodemon index.js",
    
    "lint": "node_modules/.bin/eslint .",
    "lintfix": "node_modules/.bin/eslint . --fix",
    "prettier": "npx prettier --write .",
    
    "jsdoc": "./node_modules/jsdoc/jsdoc.js -c jsdoc.conf.json",
    "apidocs": "nodemon docs.js",

    "test": "./node_modules/.bin/cross-env DB_DATABASE=test-wesellhousesDB jest --detectOpenHandles --forceExit --testTimeout=10000",
    "testOne": "node_modules/.bin/jest -t ",
    "testPrep": "mongo test-wesellhousesDB --eval \"db.dropDatabase()\" && mongodump --archive --db=wesellhousesDB | mongorestore --archive  --nsFrom='wesellhousesDB.*' --nsTo='test-wesellhousesDB.*'",
    "testWatch": "cross-env DB_DATABASE=test-wesellhousesDB jest --watch "
  },
  "repository": {
    "type": "git",
    "url": "https://github.coventry.ac.uk/304CEM-2021SEPJAN/cw.backend.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "accesscontrol": "^2.2.1",
    "bcrypt": "^5.0.0",
    "faker": "^5.1.0",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^9.4.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.10.7",
    "nodemon": "^2.0.4",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "role-acl": "^4.5.4",
    "supertest": "^6.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "prettier": "2.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
